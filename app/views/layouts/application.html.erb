<!DOCTYPE html>
<html>
  <head>
    <title>TasksManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- FontAwesome -->
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <!-- 追記 -->
    <meta name="viewport" content="width=device-width">
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container-fluid">
      <% if @task && @task.errors.any? %>
        <p class="text-danger bg-danger"><%= @task.errors.count %> 件のエラーがあります。</p>
        <% @task.errors.full_messages.each do |msg| %>
          <p class="text-danger bg-warning"><%= msg %></p>
        <% end %>
      <% end %>
<%# 要りファクタリング %>
      <% if @user && @user.errors.any? %>
        <p class="text-danger bg-danger"><%= @user.errors.count %> 件のエラーがあります。</p>
        <% @user.errors.full_messages.each do |msg| %>
          <p class="text-danger bg-warning"><%= msg %></p>
        <% end %>
      <% end %>
      <% if @group && @group.errors.any? %>
        <p class="text-danger bg-danger"><%= @group.errors.count %> 件のエラーがあります。</p>
        <% @group.errors.full_messages.each do |msg| %>
          <p class="text-danger bg-warning"><%= msg %></p>
        <% end %>
      <% end %>
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
