<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
        <td><%= task.task_name %></td>
        <td><%= task.details %></td>
        <td><%= link_to '編集', edit_task_path(task.id) %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新規', new_task_path %>
