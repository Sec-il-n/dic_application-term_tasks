<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th><%= t('.task_name') %></th>
      <th><%= t('.details') %></th>
      <th><%= t('.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr id="sequence">
        <td id="task_name"><%= task.task_name %></td>
        <td><%= task.details %></td>
        <td><%= task.created_at %></td>
        <td><%= task.valid_date %></td>
        <td><%= task.status %></td>
        <td><%= link_to '編集', edit_task_path(task.id) %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新規', new_task_path %> |
<%= link_to '終了期限でソートする', tasks_path(order_valid: 'valid_date') %>
