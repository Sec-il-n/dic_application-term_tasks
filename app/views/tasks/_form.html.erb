<%= form_with(model:task, local: true, url: choose_path)do |f|  %>
  <%= f.hidden_field :task_name %>
  <%= f.hidden_field :details %>
  <%= f.hidden_field :valid_date %>
  <%= f.hidden_field :status %>
  <%= f.label :task_name %><br>
  <%= f.text_field :task_name %><br>
  <%= f.label :details %><br>
  <%= f.text_area :details %><br>
  <%= f.label :valid_date %><br>
  <%= f.date_field :valid_date %><br>
  <%= f.label :status %><br>
  <%# <%= f.select :status, [[t('.Not started'), t('.Not started')],[t('.Already started'), t('.Already started')],[t('.done'), t('.done')], include_blank: t('.select') %><br>
  <%= f.select :status, [[t('.Not started'),'未着手'],[t('.Already started'),'着手中'],[t('.done'),'完了']], include_blank: t('.select') %><br>
  <%= f.submit %>
<% end %>
