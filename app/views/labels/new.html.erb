<h2><%= "#{t('.create labels')}" %></h2>
<div class="form-row">
  <%= form_with(model: @label, local: true, url: confirm_labels_path)do |f| %>
    <div class="form-group">
      <%= f.hidden_field :label_name  %>
    </div>
    <div class="form-group">
      <%= f.label :label_name %>
      <%= f.text_field :label_name %>
      <%= f.submit %>
    </div>
  <% end %>
</div>
<%= link_to t('.index'), tasks_path %>
