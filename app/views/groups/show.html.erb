<p class="text-success bg-success"><%= notice %></p>
<h3><%= t('groups.show.group_name') %></h3>
<%= @group.group_name %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('groups.show.group_users') %></th>
        <th><%= t('groups.show.task') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @group.users.each do |user| %>
        <td><%= user.user_name %></td>
        <td><%= link_to t('groups.show.tasks'), user_groups_path %></td>
      <% end %>
    </tbody>
  </table>
</div>
